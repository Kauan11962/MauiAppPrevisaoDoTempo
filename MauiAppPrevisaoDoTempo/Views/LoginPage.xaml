<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisaoDoTempo.Views.LoginPage"
             Title="Login">
    <VerticalStackLayout Spacing="10" Padding="30" VerticalOptions="Center">

        <Label Text="E-mail" />
        <Entry x:Name="txtEmail" Placeholder="Digite seu e-mail" Keyboard="Email" />

        <Label Text="Senha" />
        <Entry x:Name="txtSenha" Placeholder="Digite sua senha" IsPassword="True" />

        <Button Text="Entrar" Clicked="OnLoginClicked" Margin="0,20,0,0" />

        <Button Text="Cadastre-se" Clicked="OnCadastrarClicked" StyleClass="Secondary" />

        <Label x:Name="lblMensagem" TextColor="Red" HorizontalTextAlignment="Center" Margin="0,10,0,0"/>

    </VerticalStackLayout>
</ContentPage>