<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisaoDoTempo.Views.HitoricoConsultas"
             Title="HistÃ³rico de Consultas">
    <VerticalStackLayout Padding="10" Spacing="10">

        <Border StrokeThickness="1" Stroke="LightGray" Padding="10" BackgroundColor="Transparent">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5"/>
            </Border.StrokeShape>

            <VerticalStackLayout Spacing="5">
                <Label Text="ðŸ”Ž Filtrar HistÃ³rico" FontSize="Medium" FontAttributes="Bold" />

                <Entry x:Name="txtCidadeFiltro" Placeholder="Pesquisar por nome da cidade" />

                <Grid ColumnDefinitions="*,*,Auto" ColumnSpacing="10">
                    <DatePicker x:Name="dtpDataInicio" Grid.Column="0" Format="dd/MM/yyyy" />
                    <DatePicker x:Name="dtpDataFim" Grid.Column="1" Format="dd/MM/yyyy" />
                    <Button Text="Aplicar Filtro" Grid.Column="2" Clicked="OnAplicarFiltroClicked" />
                </Grid>

            </VerticalStackLayout>
        </Border>

        <Label Text="Consultas Anteriores" FontSize="Small" FontAttributes="Bold" Margin="0,10,0,0"/>

        <CollectionView x:Name="cvHistorico" SelectionMode="None" EmptyView="Nenhuma consulta encontrada neste perÃ­odo.">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,5" Padding="10" BackgroundColor="#F0F8FF" 
                            Stroke="#ADD8E6" StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5"/>
                        </Border.StrokeShape>

                        <StackLayout>
                            <Label Text="{Binding Cidade}" FontAttributes="Bold" FontSize="Medium" TextColor="#333333" />
                            <Label Text="{Binding DataConsulta, StringFormat='Data: {0:dd/MM/yyyy HH:mm}'}" FontSize="Small" />
                            <Label Text="{Binding ResultadoPrevisao}" FontSize="Small" TextColor="#0066CC" />
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>