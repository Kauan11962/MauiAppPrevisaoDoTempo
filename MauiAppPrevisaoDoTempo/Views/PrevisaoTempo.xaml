<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPrevisaoDoTempo.Views.PrevisaoTempo"
             Title="Previsão do Tempo">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label 
                Text="Consulte a Previsão do Tempo"
                FontSize="Large"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Entry 
                x:Name="txtCidade"
                Placeholder="Digite o nome da cidade (Ex: São Paulo)"
                ClearButtonVisibility="WhileEditing" />

            <Button 
                x:Name="btnBuscar"
                Text="Buscar Previsão"
                Clicked="OnBuscarClicked"
                BackgroundColor="#1E90FF"
                TextColor="White" />
            
            <ActivityIndicator x:Name="activityIndicator" IsVisible="False" IsRunning="False" Color="#1E90FF"/>

            <Label 
                x:Name="lblMensagem"
                Text=""
                TextColor="Red"
                HorizontalOptions="Center" />

            <Border x:Name="borderResultado" IsVisible="False" StrokeThickness="1" Stroke="LightGray" Padding="20" BackgroundColor="#F0F8FF">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="lblCidadeResultado" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center"/>
                    
                    <Label x:Name="lblTemperatura" FontSize="Title" FontAttributes="Bold" HorizontalOptions="Center"/>
                    
                    <Label x:Name="lblDescricao" FontSize="Medium" HorizontalOptions="Center"/>
                    
                    <BoxView HeightRequest="1" Color="LightGray"/>

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Sensação Térmica:" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="lblSensacaoTermica" Grid.Column="1" HorizontalOptions="End"/>
                        
                        <Label Text="Umidade:" Grid.Row="1" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="lblUmidade" Grid.Row="1" Grid.Column="1" HorizontalOptions="End"/>
                        
                        <Label Text="Mínima / Máxima:" Grid.Row="2" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="lblMinMax" Grid.Row="2" Grid.Column="1" HorizontalOptions="End"/>
                    </Grid>
                    
                    <Button Text="Ver Histórico" Clicked="OnVerHistoricoClicked" StyleClass="Secondary"/>
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>